<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <div class="form-post">
        <h2>Sign in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email", class: "hakuna-form-label" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password", class: "hakuna-form-label" } %>
        <div class="checkbox-form">
          <div class="check">
          <input name="user[remember_me]" type="hidden" value="0">
          <input class="form-check-input boolean optional" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
          </div>
          <div class="remember">
            <label class="form-check-label boolean optional" for="user_remember_me">Remember me</label>
          </div>
        </div>
          <%= f.button :submit, "Log in", class: "btn btn-primary"  %>
        <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
