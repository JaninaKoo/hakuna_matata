<div class="container" style="height: 100vh">
  <h1>My Beaches Bookings</h1>
  <div class="row">
    <ul>
      <% current_user.bookings.each do |booking| %>
      <div class="col-xs-6">
        <li><p class="beach-name">The Beach: <%= booking.beach.name %></p></li>
        <li>About the beach: <%= booking.beach.description %></li>
        <li>Location: <%= booking.beach.location %></li>
        <li>Reservation from <%= booking.start_date %> to <%= booking.end_date %></li>
        <li>Price: <%= booking.beach.price %>â‚¬ / day</li>
      </div>
      <div class="col-xs-6">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url(<%= booking.beach.photo %>);">
        </div>
      </div>
      <% end %>
    </ul>
  </div>
</div>


