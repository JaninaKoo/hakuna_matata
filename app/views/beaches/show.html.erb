<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2><%= @beach.name %> Beach </h2>
      <p><%= @beach.location %></p>
      <p><%= @beach.description %></p>
      <p><%= @beach.price %> EUR per night</p>
      <% if user_signed_in? && current_user.owner? %>
      <h4>Booking calendar:</h4>
      <% else %>
      <%= simple_form_for [@beach, @booking] do |f| %>
      <div class="start_date" style="width:300px"><%= f.input :start_date %>
      <%= f.input :end_date %>
      </div>
      <%= f.submit %> <%= link_to "Go back", beaches_path %>
      <% end %>
      <% end %>
    </div>
    <div class="col-sm-6" style="padding-top: 80px">
      <%= image_tag @beach.photo_url, height: 400, width: 600, crop: :fill %>
    </div>


<h2>Book this beach</h2>
<% if user_signed_in? %>
  <%= simple_form_for [@beach, @booking] do |f| %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.submit "Book ", class: "btn btn-success" %>
  <% end %>
<% else %>
  <p>Please Log-in to Book Or Create an Account</p>
  <%= link_to "Log-in", new_user_session_path, class:"btn btn-success" %>
  <%= link_to "Create-An-Account", new_user_session_path, class:"btn btn-default" %>
<% end %>
<%= link_to "Go back", beaches_path, class:"btn btn-link" %>
  </div>
</div>
