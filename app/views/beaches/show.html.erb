<h1>Beaches#show</h1>
<p>Find me in app/views/beaches/show.html.erb</p>
<h2><%= @beach.name %></h2>
<p><%= @beach.location %></p>
<p><%= @beach.description %></p>
<p><%= @beach.price %></p>

<h2>Book this beach</h2>
<%= simple_form_for [@beach, @booking] do |f| %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.submit %>
<% end %>
<%= link_to "Go back", beaches_path %>
