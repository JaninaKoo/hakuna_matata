<div class="container" style="width: 100%">
  <div class="row">
    <div class="col-sm-6">
      <%= form_tag beaches_path, method: :get, class: "form-inline" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control beach-search-bar",
          placeholder: "Find a beach" %>
        <%= submit_tag 'Search', class: "btn btn-primary button-search" %>
      <% end %>

      <div class="cards-container">
        <% @beaches.each do |beach| %>
          <%= render partial: 'shared/card', locals: { beach: beach } %>
        <% end %>
      </div>
    </div>

    <div class="map-container col-sm-5 col-sm-offset-1">
      <div id="map" data-markers="<%= @markers.to_json %>"></div>
    </div>
  </div>
</div>
