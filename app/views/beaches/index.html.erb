<h1>Beaches#index</h1>
<p>Find me in app/views/beaches/index.html.erb</p>
<div class="container">
  <div class="row">
    <% @beaches.each do |beach| %>
    <div class="col-xs-12 col-sm-4">
     <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url(<%= asset_path 'syd-sujuaan-293256-unsplash.jpg' %>);">
      <div class="card-category">Luxury Resort</div>
      <div class="card-description">
        <h2><%= link_to beach.name, beach_path(beach) %></h2>
        <p><%= beach.price %>  per night </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>

<%= link_to "Add a new listing", new_beach_path(@beach) %>
