<div class="navbar-umbrella">
    <!-- Logo -->
    <a href="/" class="navbar-umbrella-brand">
       <img src="<%= asset_path 'logo.svg' %>" alt="logo"></a>

    <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- View owner -->
      <% if user_signed_in? && current_user.owner?  %>
      <a href="<%= new_beach_path %>" class="navbar-umbrella-item navbar-umbrella-link">Add a new listing</a>

      <a href="<%= dashboard_path %>" class="navbar-umbrella-item navbar-umbrella-link">My listings</a>
      <a href="<%= bookings_path %>" class="navbar-umbrella-item navbar-umbrella-link">Booking Requests</a>
      <div class="navbar-umbrella-item">
        <div class="dropdown">
          <img src= "<%= asset_path 'user-ninja-solid.svg'%>" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>

    <!-- View Tourist -->
      <% elsif user_signed_in?%>
      <a href="<%= dashboard_path %>" class="navbar-umbrella-item navbar-umbrella-link">My bookings</a>
      <div class="navbar-umbrella-item">
        <div class="dropdown">
          <img src= "<%= asset_path 'user-ninja-solid.svg'%>" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    <!-- Not logged in -->
      <% else %>
      <div class="navbar-umbrella-item">
        <div class="dropdown">
          <img src= "<%= asset_path 'user-ninja-solid.svg'%>" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
            <li><%= link_to "Login", new_user_session_path %></li>
          </ul>
        </div>
      </div>
      <% end %>

    </div>

    <div class="navbar-umbrella-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-umbrella-dropdown-menu">
          <li><a href="#">"Log in "</a></li>
          <li><a href="#">"my beaches"</a></li>
          <li><a href="#">"messages"</a></li>
        </ul>
      </div>
    </div>
  </div>
